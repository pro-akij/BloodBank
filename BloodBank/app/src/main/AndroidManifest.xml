<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.habib.bloodbank">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bloodicon_50x50"
        android:label="@string/app_name"
        android:roundIcon="@drawable/bloodicon_50x50"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Sign_up" />
        <activity
            android:name=".MyAccount"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Request"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".News"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditActivity.Add_org"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Organization"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Ambulance"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditActivity.Add_amb"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".EditActivity.Add_Feed"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Donear"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".EditActivity.Add_Doner_Info"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>