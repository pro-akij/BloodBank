<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cl_icon_model1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ambulance"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/cl_icon_model2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/cl_icon_model1"
                app:srcCompat="@drawable/district"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/cl_icon_model3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/cl_icon_model2"
                app:srcCompat="@drawable/location"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/cl_icon_model4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/cl_icon_model3"
                app:srcCompat="@drawable/contact"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/cl_model_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/cl_icon_model1"
                android:text="@string/this_is_app_developer"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/cl_icon_model1" />
            <TextView
                android:id="@+id/cl_model_location"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/cl_icon_model2"
                android:layout_below="@+id/cl_model_name"
                android:text="@string/this_is_app_developer"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/cl_icon_model2" />
            <TextView
                android:id="@+id/cl_model_district"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/cl_icon_model3"
                android:layout_below="@+id/cl_model_location"
                android:text="@string/this_is_app_developer"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/cl_icon_model3" />
            <TextView
                android:id="@+id/cl_model_contact"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/cl_icon_model4"
                android:layout_below="@+id/cl_model_district"
                android:text="@string/this_is_app_developer"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/cl_icon_model4" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>