<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorgood"
    android:orientation="vertical"
    tools:context=".Foods">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/foods_view_flipper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:outlineAmbientShadowColor="#0ad232" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/image_potato"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="#fff"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/potato" />

                    <ImageButton
                        android:id="@+id/image_egg"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_below="@id/potato_prize"
                        android:layout_centerHorizontal="true"
                        android:background="#fff"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/egg" />

                    <ImageButton
                        android:id="@+id/image_oats"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_below="@id/egg_prize"
                        android:layout_centerHorizontal="true"
                        android:background="#fff"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/oats" />

                    <TextView
                        android:id="@+id/potato_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_potato"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:maxLines="2"
                        android:text="mens black t~shirt" />

                    <TextView
                        android:id="@+id/egg_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_egg"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:maxLines="2"
                        android:text="mens black t~shirt" />

                    <TextView
                        android:id="@+id/oats_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_oats"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:maxLines="2"
                        android:text="mens black t~shirt" />

                    <TextView
                        android:id="@+id/potato_prize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/potato_text"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:text="$110"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/egg_prize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/egg_text"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:text="$122"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/oats_prize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/oats_text"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:text="$182"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/image_tea"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:background="#fff"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/tea" />

                    <ImageButton
                        android:id="@+id/image_orangs"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_below="@id/tea_prize"
                        android:layout_centerHorizontal="true"
                        android:background="#fff"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/orangs" />

                    <ImageButton
                        android:id="@+id/image_berries"
                        android:layout_width="match_parent"
                        android:layout_height="190dp"
                        android:layout_below="@id/orange_prize"
                        android:layout_centerHorizontal="true"
                        android:background="#fff"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/berries" />

                    <TextView
                        android:id="@+id/tea_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_tea"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:maxLines="2"
                        android:text="mens black t~shirt" />

                    <TextView
                        android:id="@+id/orange_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_orangs"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:maxLines="2"
                        android:text="mens gray t~shirt" />

                    <TextView
                        android:id="@+id/berries_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/image_berries"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:maxLines="2"
                        android:text="mens black t~shirt" />

                    <TextView
                        android:id="@+id/tea_prize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tea_text"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:text="$90"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/orange_prize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/orange_text"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:text="$86"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/berries_prize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/berries_text"
                        android:layout_marginTop="1dp"
                        android:background="#fff"
                        android:text="$165"
                        android:textAllCaps="true"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="#000"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>